		<script>
	   let spans = document.getElementsByTagName("span");
/* 		let xxx = document.querySelector("#xxx");
		let ymd = document.querySelector("#ymd");
		let zz = document.querySelector("#zz"); */
		let img = document.getElementsByTagName("img")[0];
		window.onload = function() {
			const xhttp = new XMLHttpRequest();
			xhttp.onload = function() {
				let result = JSON.parse(xhttp.response);
				spans[0].innerHTML = result.wtext;
				spans[1].innerHTML = result.time;
				spans[2].innerHTML = result.temp;
				img.src += "../../" + result.img;
			}
			xhttp.open("GET", "content/weather.jsp", true);
			xhttp.send();
		}
	</script>
